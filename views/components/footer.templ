package components

import(
    "fmt"
    "time"
)

func getCurrentYear() string {
    return fmt.Sprintf("%d", time.Now().Year())
}

templ Footer() {
    <footer class="bg-gray-800 py-4 mt-8">
        <div class="container mx-auto px-4 text-center">
            <p>&copy; { getCurrentYear() } Goshu. All rights reserved.</p>
        </div>
    </footer>
}
